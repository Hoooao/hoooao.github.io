---
layout: default
---
{% assign cv_pdf_url = nil %}
{% if page.cv_pdf %}
  {% if page.cv_pdf contains '://' %}
    {% assign cv_pdf_url = page.cv_pdf %}
  {% else %}
    {% assign cv_pdf_url = page.cv_pdf | prepend: 'assets/pdf/' | relative_url %}
  {% endif %}
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if cv_pdf_url %}
        <a
          href="{{ cv_pdf_url }}"
          target="_blank"
          rel="noopener noreferrer"
          class="float-right"
        >
          <i class="fa-solid fa-file-pdf"></i>
        </a>
      {% endif %}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    <div class="cv">
      {% if cv_pdf_url %}
        <object
          data="{{ cv_pdf_url }}"
          type="application/pdf"
          width="100%"
          height="900"
        >
          <p>
            <a href="{{ cv_pdf_url }}" target="_blank" rel="noopener noreferrer">
              View the CV PDF
            </a>
          </p>
        </object>
      {% else %}
        <p>CV PDF is not available at the moment.</p>
      {% endif %}
    </div>
  </article>
</div>
